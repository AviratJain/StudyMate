{\n  "manifest_version": 3,\n  "name": "ActiveLearn Chrome Extension",\n  "description": "Transform videos and webpages into structured study material, flashcards, and AI Q&A. Distraction blocker and modern dark mode dashboard.",\n  "version": "1.0",\n  "permissions": [\n    "scripting",\n    "storage",\n    "activeTab"\n  ],\n  "host_permissions": [\n    "*://*.youtube.com/*",\n    "*://*.netflix.com/*",\n    "<all_urls>"\n  ],\n  "background": {\n    "service_worker": "background.js"\n  },\n  "action": {\n    "default_popup": "popup.html",\n    "default_icon": {\n      "16": "icons/icon16.png",\n      "32": "icons/icon32.png",\n      "128": "icons/icon128.png"\n    }\n  },\n  "content_scripts": [\n    {\n      "matches": ["<all_urls>"],\n      "js": ["content.js"],\n      "run_at": "document_end"\n    }\n  ],\n  "web_accessible_resources": [\n    {\n      "resources": ["widget.html", "styles.css", "icons/*"],\n      "matches": ["<all_urls>"]\n    }\n  ]\n}